<main>
  <h1>{{name}}</h1>
  <img class="cube" src="{{imageUrl}}">
  <div class="details">
    <p><span>Description:</span>{{description}}</p>
    <p><span>Difficulty level:</span> {{difficultyLevel}}</p>
    <a class="btn" href="/accessory/attach/{{_id}}">Attach Accessory</a>
    {{#if isOwner}}
    <a class="btn" href="/cube/delete/{{_id}}">Delete</a>
    <a class="btn" href="/cube/edit/{{_id}}">Edit</a>
    {{/if}}
    <a class="btn" href="/">Back</a>
  </div>

  <h2>Accessories</h2>
  {{#if accessories}}
  <div class="accessories">
    {{#each accessories}}
    <div class="accessory">
      <img src="{{imageUrl}}" alt="stickerName">
      <h3>{{name}}</h3>
      <p>{{description}}</p>
    </div>
    {{/each}}

    {{else}}
    <h3 class="italic">This cube has no accessories yet...</h3>
  </div>
  {{/if}}

</main>